{
  "name": "hope-church",
  "version": "1.0.0",
  "description": "==================================================================================================",
  "main": "index.js",
  "scripts": {
    "dev": "npm-run-all -p dev:*",
    "dev:11ty": "eleventy --serve",
    "dev:css": "tailwindcss -i src/static/css/tailwind.css -o _site/static/css/style.css --watch",
    "eleventy": "eleventy --serve",
    "debug": "set DEBUG=* & eleventy",
    "css": "postcss src/static/css/tailwind.css --o _tmp/static/css/style.css --watch",
    "production": "cross-env NODE_ENV=production eleventy && cross-env NODE_ENV=production postcss src/static/css/tailwind.css --o _site/static/css/style.css",
    "cms": "npx netlify-cms-proxy-server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.0.4",
    "cross-env": "^7.0.2",
    "dayjs": "^1.11.5",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.10",
    "postcss-cli": "^8.3.0",
    "tailwindcss": "^3.1.8"
  },
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-img": "^2.0.1",
    "@tailwindcss/typography": "^0.5.7"
  }
}
