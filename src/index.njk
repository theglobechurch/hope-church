	</div>

</section> <!-- end home -->


<!-- about
	================================================== -->
<section id="about" class="hope-section hope-section--welcome">
	{% set s = collections.sections|findBySlug('welcome') %}

	<div class="row about-wrap">
		<div class="col-full">

			<div class="about-profile-bg"></div>

			<div class="intro">
				<h1 class="animate-this big-title big-title--white">Welcome to</h1>
				<h2 class="lead animate-this"><span>Hope Church Vauxhall</span></h2>
			</div>
		</div>
	</div>

	<div class="row">
		<div class="col-six main-text tab-full">
			{{ s.templateContent | safe }}
		</div>

		<div class="col-six tab-full">
			<img src="{{ s.data.leadimage }}" alt="" class="animate-intro mb-4" data-animate="fadeInRight"/>

			{% if s.data.nextStep %}
				<div class="more animate-intro pull-right">
					{% for step in s.data.nextStep %}
						<a class="smoothscroll button stroke" href="{{ step.link }}">
							{{ step.title }}
						</a>
					{% endfor %}
				</div>
			{% endif %}

			</div>
		</div>
	</div>


	</div> <!-- end about-wrap  -->

</section> <!-- end about -->


<!-- Sundays
	================================================== -->
<section id="sunday" class="hope-section hope-section--sunday">

	{% set s = collections.sections|findBySlug('sundays') %}

	<div class="row about-wrap">
		<div class="col-full">
			<div class="intro">
				<h1 class="lead animate-this big-title big-title--white">{{ s.data.title }}</h1>
			</div>
		</div>
	</div>

	<div class="row flexed">
		<div class="col-six service-details tab-full">
			<h2>Church Service</h2>
			<ul>
				<li>Every Sunday</li>
				<li>11am at Hope Church</li>
				<li>105 Tyers Street, Vauxhall, SE11 5HS</li>
			</ul>
			<img src="{{ s.data.leadimage }}" alt="" class="animate-intro map mb-4" data-animate="fadeInLeft"/>
			<div class="more animate-intro">
				<a class="button stroke" href="https://goo.gl/maps/X2pwizqkHGD2" target="_blank" rel="noopener">
					Go to Map
				</a>
			</div>
		</div>

		<div class="col-six main-text tab-full">

			{{ s.templateContent | safe }}

			{% if s.data.nextStep %}
			<div class="more animate-intro">
				{% for step in s.data.nextStep %}
					<a class="smoothscroll button stroke" href="{{ step.link }}">
						{{ step.title }}
					</a>
				{% endfor %}
			</div>
			{% endif %}

		</div>

	</div>


	</div> <!-- end about-wrap  -->

</section> <!-- end about -->


<!-- about
	================================================== -->
<section id="vision" class="vision">
	{% set s = collections.sections|findBySlug('vision') %}

	<div class="row narrow section-intro with-bottom-sep animate-this text-black">

		<div class="intro">
			<h3 class="animate-this">{{ s.data.title }}</h3>
		</div>

		{{ s.templateContent | safe }}

	</div> <!-- end row -->

</section> <!-- end services -->


<!-- weekschedule
	================================================== -->
<section id="weekschedule" class="hope-section weekschedule">

	<div class="intro-wrap">

		<div class="row narrow with-bottom-sep animate-this">
			<div class="col-twelve">

				<div class="intro">
					<h3 class="animate-this fadeInUp animated line-before micro-title">Diary</h3>
				</div>
				<h1 class="big-title">What's Going On At Hope</h1>

				<p>Hope Church is open Monday â€“ Friday between 9am and 5pm, do drop in! We host specific events <span class="nobr">throughout the week.</span></p>

				<div class="divide-y hope-diary">
					{% for day in ['Sunday', 'Monday', 'Tuesday','Wednesday', 'Thursday', 'Friday', 'Saturday'] %}
						<div class="grid sm:grid-cols-3 py-4 gap-4">
							<div>
								<h2>{{ day }}</h2>
							</div>
							<div class="sm:col-span-2 divide-y text-left">
								{% for event in collections.activities|activityByDay(day) %}
									<div>
										<h3>{{ event.data.title }}</h3>
										<p>{{ event.data.time|safe }}</p>
										{% if event.data.shortDesc %}
											<p><em>{{ event.data.shortDesc }}</em></p>
										{% endif %}
									</div>
								{% endfor %}
							</div>
						</div>
					{% endfor %}
				</div>

				<p>All events take place at Hope Church, 105 Tyers Street, Vauxhall, SE11 5HS.</p>
				<p>For more information drop in or call <a href="tel:02075 822 618">02075 822 618</a>.</p>

				<div class="more">
					<a class="button stroke stroke--red" href="https://goo.gl/maps/X2pwizqkHGD2" target="_blank" rel="noopener">
						Find Hope on a Map
					</a>
				</div>

			</div>
		</div> <!-- end row section-intro -->

	</div> <!-- end intro-wrap -->


</section> <!-- end portfolio -->

<section id="testimonials" class="hope-section team">

	<div class="row">
		<div class="col-twelve">
			<h2 class="animate-this">Hope Church Team</h2>
		</div>
	</div>

	<div class="row flex-container">

		<div class="services-list block-1-2 block-tab-full group">

			{% for person in collections.people %}
				<div class="bgrid service-item animate-this fadeInUp animated">

					{% if person.data.photo %}
					<span class="icon">
						<img src="{{ person.data.photo | replace('.jpg', '-sq-250.jpg')  }}" alt="{{ person.data.name }}" class="mx-auto" />
					</span>
					{% endif %}

					<div class="service-content">
						<h3 class="h05">
							{{ person.data.name }}
						</h3>

						<p>
							{{ person.data.shortBio }}
						</p>
					</div>

				</div>
			{% endfor %}

		</div>

	</div> <!-- end flex-container -->

</section> <!-- end testimonials -->



